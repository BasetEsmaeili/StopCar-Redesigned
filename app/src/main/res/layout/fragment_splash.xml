<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor"
        tools:context=".ui.fragments.splash.SplashFragment">

        <ImageView
            android:id="@+id/img_splash_icon"
            android:layout_width="@dimen/_140mdp"
            android:layout_height="@dimen/_140mdp"
            android:layout_marginStart="@dimen/_8mdp"
            android:layout_marginTop="@dimen/_8mdp"
            android:layout_marginEnd="@dimen/_8mdp"
            android:layout_marginBottom="@dimen/_8mdp"
            android:src="@drawable/parking_app_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_splash_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8mdp"
            android:layout_marginEnd="@dimen/_8mdp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="?attr/textViewColor"
            android:textSize="@dimen/_28font_mdp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_splash_icon"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/progressbar_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8mdp"
            android:layout_marginTop="@dimen/_22mdp"
            android:layout_marginEnd="@dimen/_8mdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_splash_app_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
